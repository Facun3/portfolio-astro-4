---

interface Props {
    date: string;
    title: string;
    desc: string;
    link?: string;
}

const { date, title, desc, link } = Astro.props; 

---

<div class="absolute w-3 h-3 bg-[#facc15] rounded-full mt-[0.45rem] -start-1.5"></div>
        <time class="mb-1 text-sm font-normal leading-none text-white">{date}</time>
        <h3 class="text-lg font-semibold text-[#facc15]">{title}</h3>
        <p class="mb-4 text-base font-normal text-white">{desc}</p>