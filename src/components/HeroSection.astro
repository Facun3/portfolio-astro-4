import GithubIcon from "./icons/GithubIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";

---

<div class="flex flex-col items-center md:justify-start">
  <img
    src="/profile.webp"
    class="size-[120px] rounded-full mb-2"
    alt="facundo profile pic"
  />
  <AvailableBadge>
    Disponible para trabajar
  </AvailableBadge>
  <h1 class="mt-4 text-2xl font-bold text-white md:text-4xl">
    Hola, Soy Facundo 👋🏼
  </h1>
</div>
<h2 class="mt-4 text-lg">
  <span class="text-green-400">Desarrolador de software</span>
  <span class="opacity-90"
    >con experiencia de casi 3 años en la creación de aplicaciones web innovadoras.</span
  >
  <span>Ubicado en Córdoba, Argentina 🇦🇷.</span>
</h2>
<nav class="flex mt-4 gap-x-2">
  <SocialBadge href="https://www.linkedin.com/in/facundo-choque/">
